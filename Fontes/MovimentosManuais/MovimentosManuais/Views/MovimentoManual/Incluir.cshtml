@model MovimentosManuais.Models.MovimentoManual

@{
    ViewData["Title"] = "IncluirMovimentoManual";
}

<h1>IncluirMovimentoManual</h1>

<h4>MovimentoManual</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Incluir" id="Incluir" name="Incluir">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataMes" class="control-label">Mês</label>
                <input asp-for="DataMes" class="form-control" disabled="true" />
                <span asp-validation-for="DataMes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAno" class="control-label">Ano</label>
                <input asp-for="DataAno" class="form-control" disabled="true"/>
                <span asp-validation-for="DataAno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoProduto" class="control-label"> Produto </label>
                <select asp-items="@ViewBag.Produtos" name="CodigoProduto" id="CodigoProduto" class="form-control" disabled="true"></select>
                <span asp-validation-for="CodigoProduto" class="text-danger"></span>
                <label asp-for="CodigoCosif" class="control-label">Cosif</label>
                <select asp-items="@ViewBag.Cosif" name="CodigoCosif" class="form-control" disabled ="true"></select>
                <span asp-validation-for="CodigoCosif" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label">Valor</label>
                <input asp-for="Valor" class="form-control" disabled ="true"/>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" disabled ="true"/>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Limpar" name ="Acao" class="btn btn-primary" />
                <input type ="button" value="Novo"  id ="Novo" class="btn btn-primary" onclick="javascript: disableField();" />
                <input type="submit" value="Incluir" name ="Acao" class="btn btn-primary" />
            </div>
            <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
            <script type="text/javascript">
                $("body").on("change", "#CodigoProduto", function () {
                    $('#Incluir').submit();
                });

                $(document).ready(function () {
                    //alert(document.getElementById("CodigoProduto").value);
                    if (document.getElementById("CodigoProduto").value != '') {
                        disableField();
                    }
                });


                function disableField() {
                        var cells = document.getElementsByClassName("form-control");
                        for (var i = 0; i < cells.length; i++) {
                            cells[i].disabled = false;
                    }
                };

            </script>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

